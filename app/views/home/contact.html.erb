<h1>Contact</h1>

<%= form_for (@contact), :html => {:class => 'form-horizontal'} do |f| %>
    <div class="field">
      <%= f.text_field :nom, placeholder: 'nom' %>
    </div>
    <div class="field">
      <%= f.text_field :email, placeholder: 'email' %>
    </div>
    <div class="field">
      <%= f.text_field :objet, placeholder: 'objet' %>
    </div>
    <div class="field">
      <%= f.text_area :message %>
    </div>

  <%= f.submit %>
<%end %>
<br clear="all">