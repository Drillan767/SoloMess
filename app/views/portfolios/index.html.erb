<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tags</th>
      <th>Slug</th>
      <th>Thumbnail</th>
      <th>Website</th>
      <th>Creation time</th>
      <th>Public</th>
      <th>Content</th>
      <th>Illustrations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.title %></td>
        <td><%= portfolio.tags %></td>
        <td><%= portfolio.slug %></td>
        <td><%= portfolio.thumbnail %></td>
        <td><%= portfolio.website %></td>
        <td><%= portfolio.creation_time %></td>
        <td><%= portfolio.public %></td>
        <td><%= portfolio.content %></td>
        <td><%= portfolio.illustrations %></td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Portfolio', new_portfolio_path %>
